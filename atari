<html>
	<head>
    <meta charset="utf-8" />
    <title>Surin's Mini Game ATARI</title>
    <center><h1>Atari Breakout</h1> </center>
    <style>
    	* { padding: 0; margin: 0; }
    	canvas { background: #eee; display: block; margin: 0 auto; }
    </style>
</head>
<body>

<canvas id="myCanvas" width="1000" height="600" ></canvas>

<script>

/*
Surin Rao  Mar 8 2016 Scrum 1 Atari
//Super helpful:     http://cheatsheetworld.com/programming/html5-canvas-cheat-sheet/
*/



//-------------------------------Variables ----------------------------------------------------------------

var canvas = document.getElementById("myCanvas");
var ctx = canvas.getContext("2d");
var paddleHeight = 10;
var paddleWidth = 75;
var StartingX = 445;
var StartingY = canvas.height;


//------------------------------Make Paddle-----------------------------------------------------------------

function Paddle() {
    ctx.beginPath();
    ctx.rect(StartingX, StartingY-10, paddleWidth, paddleHeight);
    ctx.fillStyle = "#FF33CC";
    ctx.fill();
    ctx.closePath();
}//drawpaddle

/*
* Used this idea for the link game we made a while ago
*/
function Bricks() {
    for(var i=0; i<1000; i +=150) {
       for(var k=0; k< 300; k +=50) {
            ctx.beginPath();
            ctx.rect(i, k, 100, 20);
            if(k =0) {
            ctx.fillStyle = "#009933";
            }
            else if(k =50) {
            ctx.fillStyle = "#0000cc";
            }


            ctx.fill();
            ctx.closePath();
        } 
        
    }
}




function drawAll() {
	ctx.clearRect(0, 0, canvas.width, canvas.height);
	Paddle();
    Bricks();
	}//drawAll

	drawAll();




</script>

</body>
</html>

